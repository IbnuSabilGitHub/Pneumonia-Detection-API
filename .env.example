# Pneumonia Detection API Configuration
# Copy this file to .env and modify as needed

# Application Settings
APP_NAME="Pneumonia Detection API"
APP_VERSION="2.0.0"
DEBUG=false

# Server Configuration
HOST="0.0.0.0"
PORT=8000

# Security Settings
TRUSTED_HOSTS="*.railway.app,localhost,127.0.0.1"
CORS_ORIGINS="*"

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=".jpg,.jpeg,.png"

# Model Configuration
MODEL_PATH="models/pneumonia_model.onnx"
MODEL_STATS_PATH="models/model_stats.json"

# Rate Limiting
RATE_LIMIT_REQUESTS=5
RATE_LIMIT_WINDOW=60  # seconds
RATE_LIMIT_BLOCK_DURATION=300  # 5 minutes

# Caching
CACHE_DURATION=300  # 5 minutes

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Optional: Redis URL for production rate limiting
# REDIS_URL="redis://localhost:6379/0"

# Railway Configuration (for deployment)
RAILWAY_ENVIRONMENT=production

# Legacy settings (backward compatibility)
ALLOWED_ORIGINS="http://localhost:3000,https://your-frontend-domain.vercel.app"
